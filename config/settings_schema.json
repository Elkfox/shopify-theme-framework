      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook"
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter"
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest"
      },
      {
        "type": "checkbox",
        "id": "share_fancy",
        "label": "Add to Fancy"
      },
      {
        "type": "checkbox",
