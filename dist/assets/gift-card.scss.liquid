/* Variables =================================================================*/

// Colors
$colorBrand: {{ settings.color_brand }};
$colorBody: {{ settings.color_text }};
$colorBackground: {{ settings.color_background }};
$colorHighlight: {{ settings.color_highlight }};
$colorAlternate: {{ settings.color_alternate }};

// Typography
$fontLight: 300;
$fontNormal: 400;
$fontBold: 700;
$lineHeight: 1.75;

// Space & Borders
$gutter: 50px;
$borderRadius: 2px;
$borderWeight: 2px;
$borderStyle: solid;

// Screen Sizes
$s: 600px;
$m: 850px;
$l: 1150px;
$xl: 1450px;

// Miscellaneous
$logoWidth: {{ settings.logo_width | default: '450' | append: 'px' }};
$transition: all .3s ease-out;

/* Main Styling  =============================================================*/

.giftcard {
  max-width: 500px;
  margin: 0 auto;
}

/* Print Styles  =============================================================*/

@media print {
  @page {
    margin: 0.5cm;
  }

  p, h2, h3 {
    orphans: 3;
    widows: 3;
  }

  h2, h3 {
    page-break-after: avoid;
  }

  html, body {
    background-color: #fff;
  }

  .add-to-apple-wallet {
    display: none;
  }

  .shop-url {
    display: block;
  }

}
